<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
      integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <%- include('./../components/navbar.ejs') %>
    <div class="container mx-auto" style="background-color: #eee">
      <button
        class="btn btn-outline-primary"
        onclick="location.href ='/users/add'"
      >
        Add
      </button>

      <h4>request detail</h4>
      <input type="hidden" value="<%= request.work_uid %>" id="request-id" />
      <div><h5><%= request.title %></h5></div>
      <div><%= request.create_datetime %></div>
      <div><%= request.to_department %></div>
      <div><%= request.text %></div>
      <div><%= request.user_uid %></div>
      <div><%= request.due_date %></div>

      <div class="">
        comments
        <div>
          <% for (var i =0; i < comments.length; i++){ %>
          <div class="d-flex">
            <div><%= comments[i].user_uid ?? "unknown" %>:</div>
            <div class="mx-2"><%= comments[i].text %></div>
          </div>
          <% } %>
        </div>
        <div class="d-flex">
          <textarea
            name=""
            id="text"
            cols="30"
            rows="1"
            class="form-control align-self-start"
          ></textarea>
          <button
            class="align-self-start btn btn-primary mx-2"
            id="send"
            ,
            data-id="<%=request.work_uid %>"
          >
            send
          </button>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
      // const request_uid = $("#request-id").val()
      // $.ajax({
      //     method:"get",
      //     url: `/comments/get_data?request_uid=${request_uid}`
      // }).done(function(result){
      //     console.log(result)
      // })
      $("#send").click(function () {
        console.log("new comments");
        var work_uid = this.dataset.id;
        $.ajax({
          method: "post",
          url: "/comments/add",
          data: {
            work_uid: work_uid,
            text: $("#text").val(),
          },
        }).done(function (result) {
          console.log(result);
        });
      });
    </script>
  </body>
</html>

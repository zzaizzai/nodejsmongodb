  <body>
    <%- include('./../components/navbar.ejs') %>
    <div class="container mx-auto">
      <div class="d-flex">
        <h4 class="flex-grow-1">Requests</h4>
        <div class="mx-2">
          <!-- <select name="">
            <option value="">Sort</option>
            <option value="dd">date down</option>
            <option value="dd">date up</option>
          </select> -->
        </div>
        <button
          class="btn btn-outline-primary"
          onclick="location.href ='/requests/mode/add'"
        >
          Add New Request
        </button>
      </div>
      <div class="d-flex">
        <input
          type="text"
          class="form-control my-2 mx-2"
          name="due"
          id="search-text"
          autocomplete="off"
        />
        <button id="search" class="btn btn-primary my-2">Search</button>
      </div>

      <div class="container">
        <ul class="list-group list-group-flush">
          <% for (var i =0; i < requests.length; i++){ %>
          <li class="list-group-item">
            <h5><%= requests[i].title %></h5>
            <div>due_date: <%= requests[i].due_date %></div>
            <div class="d-flex">
              <div class="flex-grow-1">create_datetime: <%= requests[i].create_datetime %></div>
              <button onclick="location.href = `/requests/<%=requests[i]._id%>`;" data-id="<%= requests[i]._id %>" class="more btn btn-secondary">More</button>
            </div>
          </li>
          <% } %>
        </ul>
      </div>
    </div>


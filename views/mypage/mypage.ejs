<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous" />
  <title>Document</title>
</head>

<body>
  <%- include('./../components/navbar.ejs') %>
    <div class="container">
      <h3>Mypage</h3>

      <table>
        <% if (user){ %>
          <tr>
            <td>Uid:</td>
            <td>
              <%= user._id %>
            </td>
          </tr>
          <tr>
            <td>id:</td>
            <td>
              <%= user.id %>
            </td>
          </tr>
          <tr>
            <td>Name:</td>
            <td>
              <%= user.user_name %>
            </td>
          </tr>
          <tr>
            <td>Role:</td>
            <td>
              <%= user.role %>
            </td>
          </tr>
          <tr>
            <td>Department:</td>
            <td>
              <%= user.department %>
            </td>
          </tr>

          <% } %>
      </table>
      <button onclick="location.href='/mypage/mode/edit'" class="btn btn-outline-primary">
        Edit
      </button>
      <button id="logout" class="btn btn-danger mx-2">logout</button>
      <div class="my-5">
        <h4>Works list</h4>
        <div class="my-works"></div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
      $("#logout").click(function () {
        $.ajax({
          method: "GET",
          url: "/login/logout",
        }).done((result) => {
          location.href = "/";
        });
      });

      $.ajax({
        method: "get",
        url: "/works/data/get_my_works_with_user_uid",
      }).done((result) => {
        console.log();
        result.my_works.forEach((e) => {
          console.log(e);
          $(".my-works").append(`<div>${e.title}</div>`);
        });
      });
    </script>
</body>

</html>
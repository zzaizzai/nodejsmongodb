<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
      integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <%- include('./../components/navbar.ejs') %>
    <div class="container mx-auto">
      <div class="d-flex">
        <h4 class="flex-grow-1">Users</h4>
        <% if (role == "admin") { %>
        <button
          class="btn btn-outline-primary"
          onclick="location.href ='/users/mode/add'"
        >
          Add
        </button>
        <% } %>
      </div>
      <div>
        <table width="100%">
          <tbody>
            <tr>
              <td><h5>Name</h5></td>
              <td width="100"><h5>id</h5></td>
              <td width="100"><h5>department</h5></td>
            </tr>
            <% for (var i =0; i < users.length; i++){ %>
            <tr>
              <td><a href="/users/<%= users[i]._id %>" style="color: black;" ><h5><%= users[i].user_name %></h5></a></td>
              <td><%= users[i].id %></td>
              <td><%= users[i].department ?? 'None' %></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
